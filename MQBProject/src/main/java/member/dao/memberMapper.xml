<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberSQL">
	<!--로그인 -->        <!-- DAO에서 map데이터를 보내는게 여기로 오는데 그때 파라메터타입은 들어오는 데이터의  -->
	<select id="login" parameterType="java.util.Map" resultType="member.bean.MemberDTO"><!--올때틑 맵으로 나갈때는 디티오로 나가겠다.  -->
		select * from member where id=#{id} and pwd=#{pwd}
	</select>  
	
	<!-- 아이디 중복 체크 --><!--여기 isCheckId는 디에이 오의 "memberSQL.isCheckId"  -->
	<select id="isCheckId" parameterType="java.lang.String" resultType="member">
		select * from member where id=#{id}
	</select>
	
	<!-- 우편번호  -->								<!-- 내보내는 결과틑 집코드디티오를 답는거 집코드 디티오 담아서 결과를 받기로 디에이오에서 약속걸었으니까.  -->
	<select id="getZipcodeList" parameterType="java.util.Map" resultType="member.bean.ZipcodeDTO">   <!--resultType="zipcode"  -->
       select * from newzipcode 
       where sido like '%'||#{sido}||'%'  <!--  '%'||#  를 쓴이유는 %# 이렇게 쓰면 에러나니까!! -->
       	and sigungu like '%'||#{sigungu}||'%' 
       	and roadname like '%'||#{roadname}||'%'
    </select>

</mapper>